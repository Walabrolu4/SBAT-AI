 
{
  "compilerOptions": {
    "target": "ESNext", 
    "useDefineForClassFields": true,
    "module": "ESNext", 
    "lib": ["ESNext", "DOM", "DOM.Iterable"], 
    "moduleResolution": "Bundler",
    "strict": true, 
    "sourceMap": true, 
    "resolveJsonModule": true, 
    "esModuleInterop": true, 
    "noEmit": true, 
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true 
  },
  "include": ["src"] 
}